---
// Importación de componentes necesarios siguiendo el patrón de diseño de la aplicación
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";

// Definición de variables para el contenido de la sección
const title: string = "Contáctanos";
const subTitle: string =
  "En Extintores del Risaralda, estamos listos para asesorarte. Completa el formulario y nos pondremos en contacto contigo pronto.";
const formTitle: string = "Completa el formulario";
const formSubTitle: string = "Te responderemos en 1 a 2 días hábiles.";
---

<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    {/* Encabezado de la sección */}
    <div class="text-center">
      <h1
        class="text-2xl font-bold tracking-tight text-balance text-neutral-800 md:text-4xl md:leading-tight dark:text-neutral-200"
      >
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
          {formTitle}
        </h2>

        {/* Formulario con componentes de entrada consistentes */}
        <form>
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="contact-firstname"
                label="Nombre"
                name="firstname"
              />
              <TextInput
                id="contact-lastname"
                label="Apellido"
                name="lastname"
              />
            </div>
            <EmailContactInput id="contact-email" />
            <PhoneInput id="contact-phone" />
            <TextAreaInput
              id="contact-message"
              label="Mensaje"
              name="message"
            />
          </div>

          <div class="mt-4 grid">
            <AuthBtn title="Enviar Mensaje" />
          </div>

          <div class="mt-3 text-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {formSubTitle}
            </p>
          </div>
        </form>
      </div>

      {/* Información adicional de contacto */}
      <div class="divide-y divide-neutral-300 dark:divide-neutral-700">
        <div class="flex gap-x-7 py-6">
          <div
            class="flex h-7 w-7 items-center justify-center rounded-full bg-neutral-100 dark:bg-neutral-800"
          >
            <svg
              class="h-3.5 w-3.5 shrink-0 text-neutral-600 dark:text-neutral-400"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"
              ></path>
              <path d="m9 22 6-6h-6v6Z"></path>
            </svg>
          </div>
          <div class="grow">
            <h3 class="font-bold text-neutral-700 dark:text-neutral-300">
              Visita nuestra oficina
            </h3>
            <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
              Extintores del Risaralda
            </p>
            <p class="mt-1 text-sm text-neutral-500 italic">
              Las Carmelitas, Cl. 32 #16-46, Dosquebradas, Risaralda
            </p>
          </div>
        </div>

        <div class="flex gap-x-7 py-6">
          <div
            class="flex h-7 w-7 items-center justify-center rounded-full bg-neutral-100 dark:bg-neutral-800"
          >
            <svg
              class="h-3.5 w-3.5 shrink-0 text-neutral-600 dark:text-neutral-400"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"
              ></path>
              <path d="M16 14h.01"></path>
              <path d="M8 14h.01"></path>
            </svg>
          </div>
          <div class="grow">
            <h3 class="font-bold text-neutral-700 dark:text-neutral-300">
              Contáctanos por email
            </h3>
            <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
              ¿Prefieres el texto escrito? Envíanos un email a
            </p>
            <a
              class="mt-2 inline-flex items-center gap-x-2 rounded-lg text-sm font-medium text-zinc-600 ring-zinc-500 outline-hidden transition duration-300 hover:text-zinc-800 focus-visible:ring-3 dark:text-zinc-400 dark:ring-zinc-200 dark:hover:text-zinc-200 dark:focus:ring-1 dark:focus:outline-hidden"
              href="mailto:info@extintoresdelrisaralda.com"
            >
              info@extintoresdelrisaralda.com
              <svg
                class="h-4 w-4 shrink-0 transition ease-in-out group-hover:translate-x-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
              </svg>
            </a>
          </div>
        </div>

        <div class="flex gap-x-7 py-6">
          <div
            class="flex h-7 w-7 items-center justify-center rounded-full bg-neutral-100 dark:bg-neutral-800"
          >
            <svg
              class="h-3.5 w-3.5 shrink-0 text-neutral-600 dark:text-neutral-400"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
          </div>
          <div class="grow">
            <h3 class="font-bold text-neutral-700 dark:text-neutral-300">
              Llámanos
            </h3>
            <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
              ¿Tienes una consulta urgente? Llámanos directamente
            </p>
            <a
              class="mt-2 inline-flex items-center gap-x-2 rounded-lg text-sm font-medium text-zinc-600 ring-zinc-500 outline-hidden transition duration-300 hover:text-zinc-800 focus-visible:ring-3 dark:text-zinc-400 dark:ring-zinc-200 dark:hover:text-zinc-200 dark:focus:ring-1 dark:focus:outline-hidden"
              href="tel:+573206040400"
            >
              +57 320 604 0400
              <svg
                class="h-4 w-4 shrink-0 transition ease-in-out group-hover:translate-x-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
