---
// Importación de componentes necesarios (minimalista para este diseño)
// No necesitamos Icon ni PrimaryCTA para este estilo, a menos que los uses internamente en tu form
// import Icon from "@components/ui/icons/Icon.astro";
// import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";

// Definición de variables para el contenido de la sección
const title: string = "Contáctanos";
const subTitle: string =
  "En Extintores del Risaralda, estamos listos para asesorarte. Completa el formulario y nos pondremos en contacto contigo pronto.";
---

<section>
  <div class="mt-20 lg:mt-24">
    {/* Encabezado de la sección */}
    <div class="mb-10 text-center">
      <h1
        class="text-2xl font-bold tracking-tight text-balance text-neutral-800 md:text-4xl md:leading-tight dark:text-neutral-200"
      >
        {title}
      </h1>
      <p class="mt-3 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    {/* Contenedor del Formulario y Elemento Visual */}
    <div
      class="relative overflow-hidden rounded-xl border border-neutral-200 bg-white p-6 shadow-lg sm:p-8 lg:p-10 dark:border-neutral-700 dark:bg-neutral-800"
    >
      {/* Formulario superpuesto al elemento visual */}
      <div class="relative z-10 mx-auto max-w-lg">
        {/* Para centrar el formulario dentro del contenedor */}
        <h2
          class="mb-6 text-center text-2xl font-semibold text-neutral-800 dark:text-neutral-200"
        >
          Envíanos un Mensaje
        </h2>
        <form class="space-y-5">
          {/* Espaciado automático entre campos */}
          <div>
            <label
              for="contact-name"
              class="mb-2 block text-sm font-medium text-neutral-700 dark:text-neutral-300"
            >
              Tu Nombre:
            </label>
            <input
              type="text"
              id="contact-name"
              name="name"
              class="focus:ring-primary-500 focus:border-primary-500 block w-full rounded-md border border-neutral-300 bg-neutral-50 px-4 py-2.5 text-neutral-800 shadow-sm sm:text-base dark:border-neutral-600 dark:bg-neutral-700 dark:text-neutral-200"
              placeholder="Escribe tu nombre completo"
              required
            />
          </div>
          <div>
            <label
              for="contact-email"
              class="mb-2 block text-sm font-medium text-neutral-700 dark:text-neutral-300"
            >
              Tu Email:
            </label>
            <input
              type="email"
              id="contact-email"
              name="email"
              class="focus:ring-primary-500 focus:border-primary-500 block w-full rounded-md border border-neutral-300 bg-neutral-50 px-4 py-2.5 text-neutral-800 shadow-sm sm:text-base dark:border-neutral-600 dark:bg-neutral-700 dark:text-neutral-200"
              placeholder="tu.email@ejemplo.com"
              required
            />
          </div>
          <div>
            <label
              for="contact-message"
              class="mb-2 block text-sm font-medium text-neutral-700 dark:text-neutral-300"
            >
              Mensaje:
            </label>
            <textarea
              id="contact-message"
              name="message"
              rows={6}
              class="focus:ring-primary-500 focus:border-primary-500 block w-full resize-y rounded-md border border-neutral-300 bg-neutral-50 px-4 py-2.5 text-neutral-800 shadow-sm sm:text-base dark:border-neutral-600 dark:bg-neutral-700 dark:text-neutral-200"
              placeholder="Detalla tu consulta aquí..."
              required></textarea>
          </div>
          <button
            type="submit"
            class="w-full rounded-md bg-orange-500 px-6 py-3.5 text-lg font-bold text-white shadow-md transition duration-200 ease-in-out hover:bg-orange-600 focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 focus:outline-none"
          >
            Enviar Mensaje
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
